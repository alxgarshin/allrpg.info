{
  "type": "project",
  "license": "MIT",
  "minimum-stability": "beta",
  "prefer-stable": true,
  "require": {
    "php": ">=8.4.0",
    "alxgarshin/fraym": "^0.8",
    "minishlink/web-push": "^9.0"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "scripts": {
    "drop": [
      "./vendor/bin/console database:drop --env=test --force",
      "./vendor/bin/console database:migrate --env=test",
      "./vendor/bin/console database:drop --force",
      "./vendor/bin/console database:migrate"
    ],
    "app:cache:clear": "./bin/d clear-var",
    "app:test:unit": "./bin/phpunit",
    "app:stan:check": "@php vendor/bin/phpstan analyse",
    "app:stan:baseline": "@php vendor/bin/phpstan analyse --generate-baseline --allow-empty-baseline",
    "app:cs:check": "./vendor/bin/php-cs-fixer check -v --config=.php-cs-fixer.dist.php",
    "app:cs:fix": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
    "app:lint": [
      "@app:cs:fix",
      "@app:stan:check"
    ],
    "app:full:precommit:check": [
      "@app:lint",
      "@drop",
      "@app:test:unit"
    ],
    "post-install-cmd": [
      "@app:cache:clear"
    ],
    "post-update-cmd": [
      "@app:cache:clear"
    ]
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Captcha\\": "src/Lib/captcha/",
      "Ical\\": "src/Lib/ical/",
      "Identicon\\": "src/Lib/identicon",
      "PhpQrCode\\": "src/Lib/phpQrCode/",
      "WideImage\\": "src/Lib/wideimage/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpdocumentor/reflection-docblock": "^5.3",
    "phpstan/phpdoc-parser": "^1.22.1",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^9.5"
  }
}